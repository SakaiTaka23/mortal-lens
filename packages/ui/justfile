default:
    @just --list --unsorted

# Build the package
build:
    pnpm build

# Check linting
lint:
    pnpm lint

# Fix linting issues
lint-fix:
    pnpm lint:fix

# Check formatting
format:
    pnpm format

# Fix formatting issues
format-fix:
    pnpm format:fix

# Run tests
test:
    docker compose run --rm vrt

# Update VRT snapshots
test-update:
    docker compose run --rm vrt pnpm run test:update

# Run Storybook
storybook:
    pnpm storybook

# Clean build artifacts
clean:
    rm -rf dist

# Clean node_modules
clean-deps:
    rm -rf node_modules

# Clean and rebuild
rebuild: clean build

# Run quality checks (format + lint + build + test)
check: format lint build test
