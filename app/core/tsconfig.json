{
  "extends": "@mortal-lens/tsconfig-config/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "paths": {
      "@": ["./src"],
      "@/*": ["./src/*"]
    },
    "outDir": "dist",
    "rootDir": "./",
    "resolveJsonModule": true
  },
  "include": ["src", ".storybook/**/*.ts"],
  "exclude": ["../.dist"]
}
